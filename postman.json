  "components": {
    "schemas": {
      "RegisterAuthDto": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
            "example": "John"
          },
          "lastName": {
            "type": "string",
            "example": "Doe"
          },
          "phone": {
            "type": "string",
            "example": "securePassword123"
          },
          "password": {
            "type": "string",
            "example": "strongPassword123"
          }
        },
        "required": [
          "password"
        ]
      },
      "LoginAuthDto": {
        "type": "object",
        "properties": {
          "phone": {
            "type": "string",
            "example": "1234567890"
          },
          "password": {
            "type": "string",
            "example": "password123"
          }
        },
        "required": [
          "phone",
          "password"
        ]
      },
      "UploadFilesDto": {
        "type": "object",
        "properties": {
          "files": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "binary"
            }
          }
        },
        "required": [
          "files"
        ]
      },
      "CreateProductDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Book Title"
          },
          "description": {
            "type": "string",
            "example": "This is a book about..."
          },
          "price": {
            "type": "number",
            "example": 280000
          },
          "discount": {
            "type": "number",
            "example": null,
            "description": "Discount as a decimal (e.g., 0.1 for 10%)"
          },
          "stock": {
            "type": "number",
            "example": 100
          },
          "postage": {
            "type": "number",
            "example": 5
          },
          "description2": {
            "type": "string",
            "example": "Additional description or details about the book."
          },
          "author": {
            "type": "string",
            "example": "Fiction"
          },
          "publisher": {
            "type": "string",
            "example": "Fiction"
          },
          "genre": {
            "type": "string",
            "example": "Fiction"
          },
          "ageGroup": {
            "type": "string",
            "example": "Adult"
          },
          "pages": {
            "type": "number",
            "example": 300
          },
          "template": {
            "type": "string",
            "example": "Hardcover"
          },
          "coverType": {
            "type": "string",
            "example": "Hardcover"
          },
          "weight": {
            "type": "number",
            "example": 1.5,
            "description": "Weight in kilograms"
          },
          "isbn": {
            "type": "number",
            "example": 9783161484100
          },
          "urlVideo": {
            "type": "string",
            "example": "http://example.com/video"
          },
          "thumbnail": {
            "type": "string",
            "example": "http://example.com/thumbnail.jpg"
          },
          "mediaIds": {
            "example": [
              1,
              2,
              3
            ],
            "description": "Array of media IDs",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "name",
          "description",
          "price",
          "stock",
          "postage",
          "author",
          "publisher",
          "genre",
          "ageGroup",
          "pages",
